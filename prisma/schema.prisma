generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ticket {
  id          Int         @id @default(autoincrement())
  name        String
  description String
  phase       TicketPhase @default(CREATED)
  boardId     Int
  board       Board       @relation(fields: [boardId], references: [id], onDelete: Cascade)
  labels      Label[]
  createdAt   DateTime    @default(now())
  updatedAT   DateTime    @updatedAt
}

enum TicketPhase {
  CREATED
  IN_PROGRESS
  UNDER_REVIEW
  CLOSED
}

model Board {
  id        Int      @id @default(autoincrement())
  title     String
  tickets   Ticket[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Label {
  id        Int      @id @default(autoincrement())
  name      String
  color     String
  tickets   Ticket[]
  createdAt DateTime @default(now())
}
